<?xml version="1.0"?>
<faces-config xmlns="http://java.sun.com/xml/ns/javaee"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-facesconfig_2_0.xsd"
	version="2.0">

	<application>
	         <locale-config>
	                <default-locale>en</default-locale>
	                <supported-locale>de</supported-locale>
	          </locale-config>

	          <resource-bundle>
					<base-name>demo.motto.util.MessagesResourceBundle</base-name>
					<var>msg</var>
	   		  </resource-bundle>
	</application>

    <lifecycle>
        <phase-listener>demo.motto.util.jsf.LifeCycleDebugListener</phase-listener>
    </lifecycle>

</faces-config>
